{
  "private": true,
  "name": "slate-packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:rollup",
    "build:next": "cd ./site && next build",
    "build:production": "cross-env NODE_ENV=production yarn build:rollup && cross-env NODE_ENV=production yarn build:next",
    "build:rollup": "rollup --config ./config/rollup/rollup.config.js",
    "clean": "rm -rf ./{build,node_modules,site,tmp} ./packages/*/{dist,lib,node_modules}",
    "gh-pages": "gh-pages --dist ./build",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint benchmark packages/*/src packages/*/test examples/*/*.js examples/dev/*/*.js",
    "lint:prettier": "prettier --list-different '**/*.{md,json,css}'",
    "open": "open http://localhost:8080",
    "prettier": "prettier --write '**/*.{js,jsx,md,json,css}'",
    "release": "yarn build:production && yarn test && yarn lint && lerna publish && yarn gh-pages",
    "server": "cd ./site && next",
    "start": "npm-run-all --parallel --print-label watch server",
    "test": "cross-env BABEL_ENV=test FORBID_WARNINGS=true mocha --require @babel/register ./packages/*/test/index.js",
    "test:debug": "cross-env BABEL_ENV=test FORBID_WARNINGS=true mocha debug --require @babel/register ./packages/*/test/index.js",
    "watch": "yarn build --watch"
  },
  "peerDependencies": {
    "slate": "*",
    "slate-history": "*",
    "slate-react": "*",
    "slate-schema": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@babel/runtime": "^7.6.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-dev-expression": "^0.2.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "copy-webpack-plugin": "^4.4.1",
    "cross-env": "^5.1.3",
    "css-loader": "^3.2.0",
    "emotion": "^10.0.9",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.6.0",
    "faker": "^3.1.0",
    "gh-pages": "^0.11.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "image-extensions": "^1.1.0",
    "is-hotkey": "^0.1.4",
    "is-url": "^1.2.2",
    "lerna": "^3.18.3",
    "lodash": "^4.17.4",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "next": "^9.1.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "prismjs": "^1.5.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-error-boundary": "^1.2.5",
    "react-hot-loader": "^4.12.15",
    "react-router-dom": "^4.3.1",
    "react-values": "^0.3.0",
    "rollup": "^1.23.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "rollup-plugin-uglify": "^6.0.3",
    "source-map-loader": "^0.2.4",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  }
}
